{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [{
            "label": "echo",
            "type": "shell",
            "command": "echo Hello"
        },
        {
            "label": "Deploy JSON file into Control-M",
            "type": "shell",
            "command": "ctm deploy '${file}'",
            "problemMatcher": [
                "$eslint-stylish"
            ],
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "Validate JSON file with Control-M",
            "type": "shell",
            "command": "ctm build '${file}'",
            "problemMatcher": [
                "$eslint-stylish"
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run JSON file on Control-M",
            "type": "shell",
            "command": "ctm run '${file}'",
            "problemMatcher": [
                "$eslint-stylish"
            ],
            "presentation": {
                "reveal": "always"
            }
        }
    ]
}